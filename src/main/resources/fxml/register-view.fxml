<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.image.ImageView?>
<StackPane fx:id="rootPane" prefHeight="1080.0" prefWidth="1920.0"
           xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.csu.pixelstrikejavafx.lobby.ui.RegisterController"
           stylesheets="/assets/css/register-style.css">

    <ImageView fx:id="backgroundImageView" fitHeight="1080.0" fitWidth="1920.0" pickOnBounds="true" preserveRatio="false"/>

    <VBox alignment="CENTER" maxWidth="500.0" spacing="20.0" styleClass="register-form-container">
        <padding>
            <Insets top="40.0" right="50.0" bottom="40.0" left="50.0" />
        </padding>

        <Label styleClass="page-title" text="PIXEL STRIKE" />

        <TextField fx:id="usernameField" promptText="用户名" />
        <TextField fx:id="nicknameField" promptText="昵称" />
        <TextField fx:id="emailField" promptText="邮箱" />
        <PasswordField fx:id="passwordField" promptText="密码" />

        <Button onAction="#handleRegister" text="注 册" styleClass="register-button" />
        <Button onAction="#handleBackToLogin" text="已有账户？返回登录" styleClass="back-link" />

        <Label fx:id="statusLabel" styleClass="status-label" />

    </VBox>
</StackPane>