<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="1080.0" prefWidth="1920.0" spacing="20.0" style="-fx-background-color: #282c34;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.csu.pixelstrikejavafx.ui.RegisterController">
    <children>
        <Label text="创建新账户" textFill="white">
            <font>
                <Font name="System Bold" size="48.0" />
            </font>
            <VBox.margin>
                <Insets bottom="50.0" />
            </VBox.margin>
        </Label>
        <TextField fx:id="usernameField" maxWidth="350.0" promptText="用户名" />
        <PasswordField fx:id="passwordField" maxWidth="350.0" promptText="密码" />
        <TextField fx:id="emailField" maxWidth="350.0" promptText="邮箱" />
        <TextField fx:id="nicknameField" maxWidth="350.0" promptText="昵称" />
        <Button onAction="#handleRegister" prefHeight="40.0" prefWidth="200.0" text="注 册">
            <font>
                <Font size="18.0" />
            </font>
            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin>
        </Button>
        <Button onAction="#handleBackToLogin" prefWidth="200.0" style="-fx-background-color: transparent; -fx-text-fill: #cccccc;" text="返回登录" />
        <Label fx:id="statusLabel" textFill="#ff6347" wrapText="true">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Label>
    </children>
</VBox>