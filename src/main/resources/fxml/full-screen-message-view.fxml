<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.csu.pixelstrikejavafx.lobby.ui.dialog.FullScreenMessageController"
           alignment="CENTER" stylesheets="/assets/css/lobby-style.css">

    <Pane style="-fx-background-color: rgba(0, 0, 0, 0.7);" />

    <VBox fx:id="dialogContainer" styleClass="full-screen-dialog-pane"
          maxWidth="800" spacing="30" alignment="CENTER">
        <padding>
            <Insets top="40" right="50" bottom="40" left="50"/>
        </padding>

        <Label fx:id="titleLabel" styleClass="full-screen-dialog-title" />
        <Label fx:id="messageLabel" styleClass="full-screen-dialog-message" wrapText="true"/>
        <Button fx:id="confirmButton" text="чбошод" styleClass="full-screen-dialog-button"/>
    </VBox>
</StackPane>