<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<BorderPane prefHeight="1080.0" prefWidth="1920.0"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.csu.pixelstrikejavafx.lobby.ui.RoomController"
            stylesheets="@../assets/css/room-style.css">

    <ImageView fx:id="bg1" fitHeight="1080.0" fitWidth="1920.0" pickOnBounds="true" preserveRatio="false"/>
    <ImageView fx:id="bg2" fitHeight="1080.0" fitWidth="1920.0" pickOnBounds="true" preserveRatio="false"/>

    <top>
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 40 0 20 0;">
            <Label text="准备阶段" styleClass="title-label"/>
            <Label fx:id="roomIdLabel" text="房间ID: 等待中..." styleClass="room-id-label"/>
        </VBox>
    </top>

    <center>
        <HBox fx:id="mainContentBox" alignment="TOP_CENTER" spacing="30.0">
            <padding>
                <Insets left="50.0" right="50.0" />
            </padding>
            <children>
                <GridPane fx:id="playersGridPane" styleClass="players-grid" hgap="25" vgap="25">
                    <columnConstraints>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" prefWidth="180.0"/>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" prefWidth="180.0"/>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" prefWidth="180.0"/>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" prefWidth="180.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints prefHeight="240.0" valignment="CENTER"/>
                        <RowConstraints prefHeight="240.0" valignment="CENTER"/>
                    </rowConstraints>
                </GridPane>

            </children>
        </HBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="40.0" prefHeight="150.0">
            <padding>
                <Insets bottom="40.0"/>
            </padding>
            <children>
                <Button fx:id="leaveRoomButton" onAction="#handleLeaveRoom" text="离开房间" styleClass="bottom-button"/>
                <Button fx:id="inviteButton" onAction="#handleInviteFriend" text="邀请好友" styleClass="bottom-button"/>
                <Button fx:id="changeCharacterButton" text="更换角色" onAction="#handleChangeCharacter" styleClass="bottom-button"/>
                <Button fx:id="startGameButton" onAction="#handleStartGame" text="开始游戏" styleClass="bottom-button"/>
            </children>
        </HBox>
    </bottom>

</BorderPane>